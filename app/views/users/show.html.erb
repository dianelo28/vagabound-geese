

<h1><%= @user.username %></h1>

<div class="row">

	<div class="col-sm-2 col-sm-offset-1">
		<div class="profile">
			<%= image_tag @user.profile_image.url(:medium) %>
			<h3>Name:</h3> 
			<h4><%= @user.first_name %></h4> 
			<h3>Current City:</h3>
			<h4><%= @user.current_city %></h4>
			<h3>Join date:</h3>
			<h4><%= @user.created_at %></h4>

			<h4><%= link_to "Edit", edit_user_path(@user), class: "btn btn-info" %></h4>

		</div>
	</div>

	<div class="col-sm-8">

		<h2> <%= @user.username %>'s Posts: </h2>
		<% @posts.each do |p| %>
			<h5> <%= link_to p.title, post_path(p) %></h5>
		<% end %>
	</div>
</div>
